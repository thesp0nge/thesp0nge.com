- oldest_item = nil
- current_index = 0

- sorted_articles[current_index, featured_count].each do |item|
  - oldest_item = item
  - current_index += 1
  %article{:class=>"featured"}
    - item[:featured] = true
    = render('_article', :item => item, :is_embedded=> true)

#post_list_box
  %h2#post_list_title
    Ultimi post
  %ul#post_list
    -sorted_articles[current_index, excerpt_count].each do |post|
      %li
        %article.index
          %header
            %a{:href=>"#{route_path(post)}", :title=>"Full article"}
              %h3
                = post[:title]
            %h4
              %time
                = pretty_time(post[:created_at])
            .clearfix
            = render('_meta', :item=>post, :disable_reaction=>true, :show_lang=>true)
          .clearfix
          %section
            %p
              =post[:excerpt]
          %footer
            %a{:href=>"#{route_path(post)}", :title=>"Full article"}
              %span.read_more
                Leggi tutto &raquo;
            %hr

