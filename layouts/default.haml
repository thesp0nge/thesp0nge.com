  %head
    %title= pretty_title(item)

    %meta{:charset=>"utf-8"}
    %meta{:'http-equiv'=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
    %meta{:name=>"description", :content=>"Hi, my name is Paolo Perego and I'm a security specialist in SKY Italia. With more than 6 years of experience in penetration tests and code review I do understand what's behind an armored code. This is my blog where I write about application security, writing code and sometimes also personal stuff"}
    %meta{:name=>"author", :content=>"Paolo Perego - paolo@armoredcode.com"}
    %meta{:name=>"title", :content=>"#{pretty_title(item)}"}

    %link{:href=>'http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz', :rel=>'stylesheet', :type=>'text/css'}
    %link{:href=>'http://fonts.googleapis.com/css?family=Nothing+You+Could+Do', :rel=>'stylesheet', :type=>'text/css'}

    %meta{:property=>"og:title", :content=>@item[:title]}
    %meta{:property=>"og:type", :content=>'blog'}
    %meta{:property=>"og:url", :content=>"http://thesp0nge.com#{route_path(@item)}"}
    %meta{:property=>"og:image", :content=>"http://thesp0nge.com/images/armored_logo.png"}
    %meta{:property=>"og:site_name", :content=>"thesp0nge.com - secure software craftsman"}
    %meta{:property=>"og:description", :content=>item[:excerpt]}
    %meta{:property=>"fb:admins", :content=>"1334034919"} 
 
    %link{:href => relative_path_to(item_with_identifier '/stylesheets/styles/'), :rel => 'stylesheet'}
  %body
    .topbar
      .fill
        .container
          %a.brand{:href=>'/'}
            =site_name
          %ul.nav
            != link_unless_current 'index'
            != link_unless_current 'articles'
            != link_unless_current 'about'
    .container
      -if @item[:kind] == 'article'
        = render('_article', :item => @item, :content => content, :show_lang=>true) 
      -else
        = yield
      
      %footer
        %p
          &copy; #{Time.now.year} - #{site_name}

